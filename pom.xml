    <distributionManagement>
        <repository>
            <id>libs-releases</id>
            <name>Netease Maven Releases</name>
            <url>http://mvn.hz.netease.com/artifactory/libs-releases</url>
        </repository>

        <snapshotRepository>
            <id>libs-snapshots</id>
